{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/nestjs-shop-service",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "out-tsc/nestjs-shop-service/tsconfig.app.tsbuildinfo",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true // Allow default imports for CommonJS modules
  },
  "include": ["src/**/*.ts"],
  "exclude": ["eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"],
  "references": [
    {
      "path": "../../../libs/utils/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/interface/tsconfig.lib.json"
    }
  ]
}
